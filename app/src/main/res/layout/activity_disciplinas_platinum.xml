<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72FFD700"
    tools:context=".DisciplinasPlatinum">

    <TextView
        android:id="@+id/tvNomDisPlati"
        android:layout_width="265dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDiaPlatinum" />

    <TextView
        android:id="@+id/tvHorDisPlati"
        android:layout_width="265dp"
        android:layout_height="68dp"
        android:layout_marginTop="48dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTarifaPlati" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="262dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:text="ACTIVIDAD DEL MES"
        android:textAlignment="center"
        android:textColor="#040000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDiaPlatinum"
        android:layout_width="248dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="267dp"
        android:layout_height="47dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#3F51B5"
        android:text="INSCRIBIRME"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHorDisPlati"
        app:layout_constraintVertical_bias="0.913" />

    <TextView
        android:id="@+id/tvTarifaPlati"
        android:layout_width="259dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNomDisPlati" />
</androidx.constraintlayout.widget.ConstraintLayout>